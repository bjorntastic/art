<div class='container'>
<%= form_for @painting do |f| %>

	<div class='form-group col-md-6 col-md-offset-3'>
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control' %>
	</div>

	<div class='form-group col-md-6 col-md-offset-3'>
		<%= f.label :painter %>
		<%= f.text_field :painter, class: 'form-control' %>
	</div>

	<div class='form-group col-md-6 col-md-offset-3'>
		<%= f.label :genre %>
		<%= f.text_field :genre, class: 'form-control' %>
	</div>

	<div class='form-group col-md-6 col-md-offset-3'>
		<div class='row'>
			<div class='col-md-12'>
				<%= f.submit class: 'btn btn-primary form-control' %>
			</div>
		</div>
	</div>

<% end %>
</div>