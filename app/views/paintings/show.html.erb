<div class='container show-item'>
	<div class='col-md-6 col-md-offset-3'>
	<div class='panel panel-default'>
		
		<div class='panel-heading'>
			<h1 class='panel-title'><%= @painting.title %></h1>
		</div>
		
		<div class='panel-body'>
			<%= image_tag @painting.picture.url(:large) %>
		</div>
		
		<div class='panel-footer'>
			painted by <%= @painting.painter %>
			<br />
			<%= link_to 'Edit', edit_painting_path, class: 'btn btn-default' %>
			<%= link_to 'Delete', painting_path, method: 'delete', class: 'btn btn-default' %>
		</div>
	</div>
	</div>
</div>


