<!DOCTYPE html>
<html>
<head>
  <title>Art</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class= 'background'>
		<div class=''>
			<nav id='nav' class='navbar navbar-default'>
				<div class='navbar-header'>
					<div class='container-fluid'>
						<%= link_to (image_tag 'https://upload.wikimedia.org/wikipedia/en/6/62/ART_Television_(Sri_Lanka)_(logo).png', alt: "ART"), '/' %>
					</div>
				</div>
				<ul class='nav navbar-nav navbar-right'>
					<% if session[:user_id] %>
						<li class=''><%= link_to 'Add Painting', new_painting_path %></li>
						<li class=''><a href='/profile'>Profile</a></li>
						<li class=''><%= link_to 'Log Out', '/logout', :method => 'delete' %></li>
					<% else %>
						<li><%= link_to 'Log In', '/login' %></li>
						<li><%= link_to 'Register', '/register' %></li>
					<% end %>
				</ul>
			</nav>
			<div class='flash'>
				<% if flash[:notice] %>
					<%= flash[:notice] %>
					<br /><br />
				<% end %>
			</div>
		</div>
		<%= yield %>
	</div>
</body>
</html>
