.container
	.row
		= form_tag action: 'attempt_login' do
			%div.form-group.col-md-4.col-md-offset-4
				= text_field_tag :username, nil, class: 'form-control', placeholder: 'Username'
			%div.form-group.col-md-4.col-md-offset-4
				= password_field_tag :password, nil, class: 'form-control', :placeholder => 'Password'
			%div.form-group.col-md-4.col-md-offset-4
				= submit_tag "Log in", class: 'btn btn-primary col-md-6 col-md-offset-3'