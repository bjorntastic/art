.container
	.row
		%h3 Register
		= form_for @user, url: { controller: "access", action: 'create' } do |f|
			%div.form-group.col-md-4.col-md-offset-4
				= f.text_field :username, class: 'form-control', placeholder: 'Username'
			%div.form-group.col-md-4.col-md-offset-4
				= f.text_field :email, class: 'form-control', placeholder: 'Email'
			%div.form-group.col-md-4.col-md-offset-4
				= f.password_field :password, class: 'form-control', placeholder: 'Password'
			%div.form-group.col-md-4.col-md-offset-4
				= f.password_field :password_confirmation, class: 'form-control', :placeholder => 'Password Confirmation'
			%div.form-group.col-md-4.col-md-offset-4
				= submit_tag "Sign up now!", class: 'btn btn-primary col-md-6 col-md-offset-3'